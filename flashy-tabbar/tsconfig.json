{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "FuseJS/*": [
                "node_modules/@fuse-open/types"
            ]
        },
        "lib": [
            "dom",
            "es2018"
        ],
        "outDir": "build/typescript",
        "target": "es5"
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}

